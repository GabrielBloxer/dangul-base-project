{
    "compilerOptions": {
        "lib": [
            "es5",
            "es2015"
        ],
        "module": "commonjs",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "./index.ts",
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}